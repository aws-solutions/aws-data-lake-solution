{
    "name": "data-lake-authorizer",
    "description": "A Lambda function for authorizing access to the Data Lake API",
    "main": "index.js",
    "author": {
        "name": "aws-solutions-builder"
    },
    "version": "0.0.1",
    "private": "true",
    "dependencies": {
        "moment": "*",
        "jsonwebtoken": "*",
        "jwk-to-pem": "*",
        "request": "*",
        "underscore": "*",
        "js-base64": "*"
    },
    "devDependencies": {
        "grunt": "^0.4.5",
        "grunt-aws-lambda": "^0.13.0",
        "grunt-pack": "0.1.*",
        "grunt-contrib-clean": "*",
        "chai": "*",
        "sinon": "^2.4.1",
        "sinon-chai": "*",
        "mocha": "*",
        "aws-sdk-mock": "*",
        "npm-run-all": "*"
    },
    "scripts": {
        "test": "mocha *.spec.js",
        "build-init": "rm -rf dist && rm -f archive.zip && mkdir dist",
        "build:copy": "cp index.js dist/",
        "build:install": "cp package.json dist/ && cd dist && npm install --production",
        "build": "npm-run-all -s build-init build:copy build:install",
        "zip": "cd dist && zip -rq data-lake-authorizer.zip ."
    },
    "bundledDependencies": [
        "moment",
        "jsonwebtoken",
        "jwk-to-pem",
        "request",
        "underscore",
        "js-base64"
    ]
}
